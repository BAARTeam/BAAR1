<queries>
  <query name="org.kentisd.BAAR.students.get_name">
    <columns>
      <column>students.dcid</column>
      <column>students.lastfirst</column>
    </columns>
    <sql><![CDATA[
       SELECT student_LastFirst
       FROM Students 
       WHERE student_DCID = "Scanned Barcode"
       ORDERBY student_DCID
    ]]></sql>
  </query>
</queries>
